{
	"name": "subslate",
	"version": "0.0.0-development",
	"description": "configurable template string replacement",
	"repository": {
		"type": "git",
		"url": "https://github.com/josh-hemphill/subslate.git"
	},
	"bugs": {
		"url": "https://github.com/josh-hemphill/subslate/issues"
	},
	"contributors": [
		{
			"name": "Joshua Hemphill",
			"url": "https://joshuahemphill.com",
			"email": "jhemphill@tecnicocorp.com"
		}
	],
	"license": "MIT",
	"keywords": [
		"string",
		"formatting",
		"template",
		"object",
		"format",
		"interpolate",
		"interpolation",
		"templating",
		"configurable",
		"custom",
		"expand",
		"simple",
		"replace",
		"placeholders",
		"values",
		"transform",
		"light"
	],
	"scripts": {
		"build": "run-p build:*",
		"build:main": "tsc -p tsconfig.json",
		"build:module": "tsc -p tsconfig.module.json",
		"fix": "run-s fix:*",
		"fix:lint": "eslint src --ext .ts --fix",
		"test": "run-s build test:*",
		"test:lint": "eslint src --ext .ts",
		"test:spelling": "cspell --config config/cspell.json \"{README.md,.github/*.md,src/**/*.ts}\"",
		"test:unit": "jest -c config/jest.config.js -b --forceExit --coverage --runInBand ",
		"check-cli": "run-s test diff-integration-tests check-integration-tests",
		"check-integration-tests": "run-s check-integration-test:*",
		"diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
		"watch:build": "tsc -p tsconfig.json -w",
		"watch:test": "jest -c config/jest.config.js -b --forceExit --watch",
		"cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
		"cov:send": "run-s cov && codecov",
		"doc": "run-s doc:html && open-cli build/docs/index.html",
		"doc:html": "typedoc src/ --exclude **/*.test.ts --target ES6 --mode file --out build/docs",
		"doc:json": "typedoc src/ --exclude **/*.test.ts --target ES6 --mode file --json build/docs/typedoc.json",
		"reset-hard": "git clean -dfx && git reset --hard && npm i",
		"prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish",
		"validate": "run-s test lint",
		"ci:validate": "rm -rf node_modules && npm ci && npm run validate",
		"prepublishOnly": "npm run ci:validate && npm run build",
		"semantic-release": "semantic-release"
	},
	"engines": {
		"node": ">= 10.14.2"
	},
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "^11.0.0",
		"@commitlint/config-conventional": "^11.0.0",
		"@qiwi/semantic-release-gh-pages-plugin": "^5.0.4",
		"@semantic-release/changelog": "^5.0.1",
		"@semantic-release/git": "^9.0.0",
		"@semantic-release/npm": "^7.0.10",
		"@types/jest": "^26.0.20",
		"@types/node": "^14.14.22",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"@wessberg/rollup-plugin-ts": "^1.3.8",
		"babel-jest": "^26.6.3",
		"babel-plugin-add-module-exports": "^1.0.4",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"codecov": "^3.8.1",
		"commitizen": "^4.2.3",
		"cspell": "^5.2.4",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.18.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-promise": "^4.2.1",
		"eslint-plugin-standard": "^5.0.0",
		"gh-pages": "^3.1.0",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lint-staged": "^10.5.3",
		"npm-run-all": "^4.1.5",
		"open-cli": "^6.0.1",
		"rollup": "^2.38.1",
		"rollup-plugin-terser": "^7.0.2",
		"semantic-release": "^17.3.7",
		"semantic-release-license": "^1.0.2",
		"ts-jest": "^26.5.0",
		"ts-node": "^9.1.1",
		"typedoc": "^0.20.19",
		"typescript": "^4.1.3"
	},
	"files": [
		"build/main",
		"build/module",
		"!**/*.spec.*",
		"!**/*.json",
		"CHANGELOG.md",
		"LICENSE",
		"README.md"
	],
	"exports": {
		"import": "./build/main/index.js",
		"require": "./build/main/index.js",
		"default": "./build/module/index.js"
	},
	"main": "build/main/index.js",
	"typings": "build/main/index.d.ts",
	"module": "build/module/index.js",
	"browser": "build/module/index.js",
	"unpkg": "build/module/index.js",
	"publishConfig": {
		"access": "public"
	},
	"release": {
		"extends": "config/.releaserc.json"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm fix"
		}
	},
	"eslintConfig": {
		"extends": "./config/.eslintrc.js"
	},
	"lint-staged": {
		"*.js": [
			"eslint --cache --fix",
			"git add"
		]
	}
}
